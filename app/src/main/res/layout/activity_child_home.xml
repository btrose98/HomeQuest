<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7e9ec"
        tools:context=".childHome">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="342dp"
            android:layout_height="191dp"
            android:layout_marginTop="208dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pink_bubble" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="341dp"
            android:layout_height="123dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_icon" />

        <ImageButton
            android:id="@+id/childCalendar"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="575dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/calendar_icon" />

        <ImageButton
            android:id="@+id/btRedeem"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:layout_marginTop="425dp"
            android:layout_marginEnd="35dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/redeem_icon" />

        <ImageButton
            android:id="@+id/btChildSettings"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/settings_icon" />

        <ImageButton
            android:id="@+id/btQuest"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:layout_marginTop="425dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/childCalendar"
            app:layout_constraintEnd_toStartOf="@+id/btRedeem"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/quests_icon" />

        <ImageButton
            android:id="@+id/btFriends"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btChildSettings"
            app:layout_constraintHorizontal_bias="0.714"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/childCalendar"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/friends_icon" />

        <ImageButton
            android:id="@+id/btMessagesChild"
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/btChildSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toEndOf="@+id/childCalendar"
            app:layout_constraintTop_toBottomOf="@+id/btRedeem"
            app:layout_constraintVertical_bias="0.555"
            app:srcCompat="@drawable/messages_icon" />

        <Button
            android:id="@+id/btChildSignout"
            android:layout_width="81dp"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:text="sign out"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="62dp"
            android:layout_height="18dp"
            android:layout_marginTop="24dp"
            android:text="001"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/logo"
            app:layout_constraintHorizontal_bias="0.908"
            app:layout_constraintStart_toStartOf="@+id/logo"
            app:layout_constraintTop_toTopOf="@+id/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>